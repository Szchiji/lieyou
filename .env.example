BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
ADMIN_USER_ID=123456789
DATABASE_URL=postgres://user:password@ep-xxxxxx-pooler.region.neon.tech/dbname?sslmode=require

# Render Web Service + Webhook
# 若使用 Render 提供的公开地址，可不填 WEBHOOK_BASE_URL，代码会用 RENDER_EXTERNAL_URL
# WEBHOOK_BASE_URL=https://your-service.onrender.com
WEBHOOK_PATH=/webhook/abc123xyz        # 自定义路径(建议随机字符串，不要用完整 token)
SECRET_TOKEN=some-long-random-secret    # Telegram Webhook 校验用 (X-Telegram-Bot-Api-Secret-Token)

# Render 会注入 PORT 环境变量，无需手动设置
# PORT=10000

# DB 连接池（可选）
DB_POOL_MIN=0
DB_POOL_MAX=8
DB_STATEMENT_CACHE_SIZE=100
